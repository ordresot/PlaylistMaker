<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/headers_text_size</item>
    </style>

    <style name="SettingsElementStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/activity_settings_text_color</item>
        <item name="android:paddingVertical">@dimen/bold_vertical_indent</item>
        <item name="android:paddingHorizontal">@dimen/regular_horizontal_indent</item>
    </style>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/regular_horizontal_indent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/headers_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/activity_main_text_color</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/activity_main_text_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>