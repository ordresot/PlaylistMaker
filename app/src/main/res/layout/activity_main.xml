<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_main_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/panel_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/panel_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/ys_display_bold"
            android:gravity="center"
            android:text="@string/activity_main_name"
            android:textColor="@color/activity_main_panel_header_text_color"
            android:textSize="@dimen/headers_text_size" />
    </LinearLayout>


    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="3"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display_bold"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/button_search_text"
        android:textAllCaps="false"
        android:textColor="@color/activity_main_text_color"
        android:textSize="@dimen/headers_text_size"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/activity_main_text_color" />

    <Button
        android:id="@+id/button_library"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="3"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display_bold"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/button_library_text"
        android:textAllCaps="false"
        android:textColor="@color/activity_main_text_color"
        android:textSize="@dimen/headers_text_size"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_library"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/activity_main_text_color" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="3"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display_bold"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/settings_text"
        android:textAllCaps="false"
        android:textColor="@color/activity_main_text_color"
        android:textSize="@dimen/headers_text_size"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_settings"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/activity_main_text_color" />
</LinearLayout>